<Page
    x:Class="Lambda.AdvancedScanningPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lambda"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel x:Name="AdvScanStackPanel" Orientation="Vertical" Width="Auto" Height="Auto" Margin="100">
            <Button x:Name="PickAFileButton" Style="{StaticResource AccentButtonStyle}" Content="Select Object" Height="44" Click="PickAFileButton_Click" HorizontalAlignment="Center"/>
            <TextBlock x:Name="PickAFileOutputTextBlock" TextWrapping="Wrap" HorizontalAlignment="Center" Height="44"/>
            <Button  x:Name="AdvancedButton" Style="{StaticResource AccentButtonStyle}" Click="AdvButton_Click" HorizontalAlignment="Center" Height="44">Scan Selected Object</Button>
            <ContentDialog x:Name="ErrorContentDialog"
                                   PrimaryButtonText="Retry"
                                   IsPrimaryButtonEnabled="False"
                                   CloseButtonText="Cancel"
                                   Opened="Error_Opened">
                <StackPanel x:Name="ErrorStackPanel" Orientation="Vertical" Width="Auto" Height="Auto" Margin="100">
                    <TextBlock TextWrapping="WrapWholeWords">
                                <Run>Error Receiving Response.</Run>
                    </TextBlock>
                </StackPanel>
            </ContentDialog>
            <TextBlock x:Name="advblock" HorizontalAlignment="Center" VerticalAlignment="Center" Height="44"/>
            <ProgressBar x:Name="advprogressbar" Visibility="Collapsed" Width="Auto" IsIndeterminate="True" ShowPaused="False" ShowError="True" Height="44" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
