<Window
    x:Class="Lambda.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource WindowCaptionButtonBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="44"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid x:ConnectionId='2' x:Name="AppTitleBar" Background="{ThemeResource WindowCaptionButtonBackground}">
            <Image Source="C:\Users\mannu\OneDrive - Chandigarh University\Icons\WindowsIcon.png"
                   HorizontalAlignment="Left" 
                   Width="16" Height="16" 
                   Margin="8,0"/>
            <TextBlock x:ConnectionId='20' x:Name="AppTitleTextBlock" Text="Lambda" IsColorFontEnabled="True" Foreground="White"
                       TextWrapping="NoWrap"
                       Style="{StaticResource CaptionTextBlockStyle}" 
                       VerticalAlignment="Center"
                       Margin="28,0,0,0"/>
        </Grid>
        <NavigationView x:ConnectionId='3' x:Name="NavView"
                                                                          
                                                         
                                               
                        Header="{Binding ElementName=headerText, Path=Text, Mode=TwoWay}"
                        PaneTitle="{Binding ElementName=paneText, Path=Text, Mode=TwoWay}"
                        PaneDisplayMode="Auto"
                        ExpandedModeThresholdWidth="600"
                        IsTabStop="False"
                        IsBackEnabled="True"
                        IsSettingsVisible="False"
                        IsBackButtonVisible="Auto"
                                                             
                        Background="{ThemeResource WindowCaptionButtonBackground}"
                        Grid.Row="1"
                        AlwaysShowHeader="True"
                        IsPaneToggleButtonVisible ="True">

            <NavigationView.MenuItems>

                <NavigationViewItemHeader Content="Scan"/>
                <NavigationViewItem x:ConnectionId='4' Content="Home" Tag="Tag_HomePage" x:Name="HomePage">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Home"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:ConnectionId='5' Content="Advanced Scanning" Tag="Tag_FileScanningPage" x:Name="AdvancedScanningPage">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Scan"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:ConnectionId='6' Content="Scan History" Tag="Tag_ScanHistoryPage" x:Name="ScanHistoryPage" SelectsOnInvoked="True">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Clock" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:ConnectionId='7' Content="Results" Tag="Tag_ResultsPage" x:Name="ResultsPage">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Target"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                
                <NavigationViewItemHeader Content="Attributes"/>
                <NavigationViewItem x:ConnectionId='8' Content="Account" Tag="Tag_AccountInformationPage" x:Name="AccountPage">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Account"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:ConnectionId='9' Content="Help" Tag="Tag_HelpPage" x:Name="HelpPage">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Help"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:ConnectionId='10' Content="Setings" Tag="Tag_SettingsPage" x:Name="SettingsPage">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Setting"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <Frame x:ConnectionId='11' x:Name="ContentFrame">

                <StackPanel x:ConnectionId='12' x:Name="AdvScanStackPanel" Orientation="Vertical" Width="Auto" Height="Auto" Margin="100">
                    <Button x:ConnectionId='13' x:Name="PickAFileButton" Style="{StaticResource AccentButtonStyle}" Content="Open a file" Height="44"                               HorizontalAlignment="Center"/>
                    <TextBlock x:ConnectionId='14' x:Name="PickAFileOutputTextBlock" TextWrapping="Wrap" HorizontalAlignment="Center" Height="44"/>
                    <Button x:ConnectionId='15'  x:Name="AdvancedButton" Style="{StaticResource AccentButtonStyle}"                         HorizontalAlignment="Center" Height="44">Click to send file sample</Button>
                    <ContentDialog x:ConnectionId='16' x:Name="ErrorContentDialog"
                                   PrimaryButtonText="Retry"
                                   IsPrimaryButtonEnabled="False"
                                   CloseButtonText="Cancel"
                                                        >
                        <StackPanel x:ConnectionId='19' x:Name="ErrorStackPanel" Orientation="Vertical" Width="Auto" Height="Auto" Margin="100">
                            <TextBlock TextWrapping="WrapWholeWords">
                                <Run>Error Receiving Response.</Run>
                            </TextBlock>
                        </StackPanel>
                    </ContentDialog>
                    <TextBlock x:ConnectionId='17' x:Name="advblock" HorizontalAlignment="Center" VerticalAlignment="Center" Height="44"/>
                    <ProgressBar x:ConnectionId='18' x:Name="advprogressbar" Visibility="Collapsed" Width="Auto" IsIndeterminate="True" ShowPaused="False" ShowError="True" Height="44" VerticalAlignment="Center"/>
                </StackPanel>

            </Frame>

        </NavigationView>
    </Grid>


</Window>

