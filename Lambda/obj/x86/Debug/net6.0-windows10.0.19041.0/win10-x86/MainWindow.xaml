<Window
    x:Class="Lambda.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lambda"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Padding="12" BorderBrush="Azure" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        
        <TextBlock x:ConnectionId='2' x:Name="advblock"/>
        <ProgressBar x:ConnectionId='3' x:Name="advprogressbar" Visibility="Collapsed" Width="130" IsIndeterminate="True" ShowPaused="False" ShowError="False" Margin="12,12" />
        <Button x:ConnectionId='4' x:Name="AdvancedButton" Style="{StaticResource AccentButtonStyle}"                        >Click to send file sample</Button>
    </StackPanel>
</Window>

